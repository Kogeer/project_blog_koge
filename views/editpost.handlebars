<div class="container text-center h-100 shadow-lg p-3 mb-3 bg-white rounded">
<form method="POST" action="/updatepost/{{post.id}}" id="newpostform" onsubmit="browserValidation">
        <label><h4>Title</h4></label><br>
        <input type="text" name="title" id="title" placeholder="Enter title here..." required value="{{post.post_title}}"><br>
        <label><h4 class="mt-2">Slug</h4></label><br>
        <input type="text" name="slug" id="slug" placeholder="Enter slug here..." required value="{{post.post_slug}}">
        <div class="mt-4 mb-0"><label><h4>Content</h4></label></div>
        <textarea name="content" form="newpostform" id="newpostcontent" placeholder="Enter text here..." required>{{post.post_content}}</textarea><br>
        <a href="/admin-posts-list" class="btn btn-warning" id="publishdiscard">Discard</a>
        <input type="submit" value="Save as draft" id="draftbutton" class="btn btn-primary" formaction="/updatepost/{{post.id}}?update=draft">
        <input type="submit" value="Publish" id="publishbutton" class="btn btn-primary">
</form>
{{#if error}}
<h3>Some input is missing</h3>
{{/if}}
</div>

<link rel="stylesheet" type="text/css" href="/stylesheets/newpost.css">