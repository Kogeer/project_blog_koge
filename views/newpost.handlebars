<form method="POST" action="/newpost" id="newpostform" onsubmit="browserValidation">
        <label for="validationDefault01">Title</label><br>
        <input type="text" name="title" id="title" required><br>
        <label for="validationDefault02">Content</label><br>
        <input type="hidden" name="content">
        <div class="container w-50 ml-0 pl-0">
        <div id="editor"></div>
        </div>
        <a href="/admin">Discard</a>
        <input type="submit" value="Publish">
</form>
{{#if error}}
<h3>Some input is missing</h3>
{{/if}}

<!-- Include the Quill library -->
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<!-- Initialize Quill editor -->
<script>
        var quill = new Quill('#editor', {
                modules: {
                        toolbar: [
                                ['bold', 'italic'],
                                ['link', 'blockquote', 'code-block', 'image'],
                                [{ list: 'ordered' }, { list: 'bullet' }]
                        ]
                },
                placeholder: 'Compose an epic...',
                theme: 'snow'
        });

        var form = document.querySelector('form');
        form.onsubmit = function () {
                // Populate hidden form on submit
                var submitcontent = document.querySelector('input[name=content]');
                submitcontent.value = quill.root.innerHTML;
        };
</script>